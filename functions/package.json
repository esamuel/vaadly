{
  "name": "vaadly-functions",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "firebase deploy --only functions",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "set-claims": "node ./scripts/setClaims.mjs",
    "set-committee": "node ./scripts/setClaims.mjs --role=committee",
    "set-platform-admin": "node ./scripts/setClaims.mjs --platformAdmin=true"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "@types/node": "^20.0.0"
  }
}
